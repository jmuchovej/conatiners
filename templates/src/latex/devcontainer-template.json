{
	"id": "latex",
	"version": "1.1.1",
	"name": "LaTeX Dev Container",
	"description": "Write your LaTeX documents in a Dev Container! (Choose from xetex, luatex, and pdftex!)",
	"documentationURL": "https://github.com/jmuchovej/devcontainers/tree/main/templates/src/latex/",
	"publisher": "John Muchovej <jmuchovej@users.noreply.github.com>",
	"licenseURL": "https://github.com/jmuchovej/devcontainers/tree/main/LICENSE",
	"platforms": ["Any"],
	"keywords": ["latex", "xelatex", "lualatex", "pdftex"],
	"options": {
		"texlive": {
			"type": "string",
			"description": "Which version of TexLive do you want to use?",
			"enum": ["2022", "2023", "2024", "latest"],
			"default": "latest"
		},
		"latexEngine": {
			"type": "string",
			"description": "Which LaTeX Engine to use",
			"enum": ["xetex", "luatex", "pdftex"],
			"default": "xetex"
		}
	}
}
